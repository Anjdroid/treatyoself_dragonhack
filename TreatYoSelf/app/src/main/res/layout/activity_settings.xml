<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="self.yo.treat.treatyoself.Settings">

    <TextView
        android:text="for every"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/lala"
        android:layout_alignLeft="@+id/lala"
        android:layout_alignStart="@+id/lala" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText1"
        android:text="0.1"
        android:fontFamily="casual"
        android:textSize="25sp"
        android:width="100sp"
        android:layout_below="@+id/lala"
        android:layout_alignLeft="@+id/lala"
        android:layout_alignStart="@+id/lala" />

    <TextView
        android:text="€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:width="30sp"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_toRightOf="@+id/editText1"
        android:layout_toEndOf="@+id/editText1" />

    <TextView
        android:text="€"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lala2"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:width="30sp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/editText1"
        android:layout_toEndOf="@+id/editText1"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText2"
        android:text="1"
        android:fontFamily="casual"
        android:textSize="25sp"
        android:width="100sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Saving goal:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lala"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/title2"
        android:layout_alignLeft="@+id/title2"
        android:layout_alignStart="@+id/title2" />

    <Button
        android:id="@+id/save_set"
        android:textStyle="bold"
        android:text="SAVE"
        android:textColor="#FF5E95"
        android:textSize="20sp"
        android:background="@drawable/button_title"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/editText2"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2" />

    <TextView
        android:text="SETTINGS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/title2"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
