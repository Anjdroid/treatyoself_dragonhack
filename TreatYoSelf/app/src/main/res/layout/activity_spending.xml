<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spending"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="self.yo.treat.treatyoself.Spending"
    android:background="@android:color/white">

    <TextView
        android:text="MY SPENDING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:textColor="@color/colorAccent"
        android:id="@+id/title1"
        android:textSize="40sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold" />

    <Button
        android:id="@+id/scan"

        android:text=""
        android:textSize="30sp"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape2"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/expl"
        android:clickable="true"
        android:layout_height="100sp"
        android:background="@color/colorAccent"
        android:layout_above="@+id/scan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:id="@+id/txt2"
            android:textSize="28sp"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/txt1"
            android:layout_alignStart="@+id/txt1"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Your savings to be: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:textColor="@android:color/white"
            android:id="@+id/txt1"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:layout_above="@+id/txt2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/saveup"

            android:text="SAVE UP"
            android:textColor="#FF5E95"
            android:textSize="10sp"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonsaveup"
            android:layout_alignBottom="@+id/txt2"
            android:layout_toRightOf="@+id/txt1"
            android:layout_toEndOf="@+id/txt1"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/add"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/scan"
        android:layout_toLeftOf="@+id/scan"
        android:layout_toStartOf="@+id/scan"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp" />

    <ImageButton
        android:layout_width="40dp"
        android:background="@drawable/buttonshape3"
        android:layout_height="40dp"
        app:srcCompat="@drawable/unnamed"
        android:id="@+id/set"
        android:adjustViewBounds="true"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/scan"
        android:layout_alignRight="@+id/title1"
        android:layout_alignEnd="@+id/title1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/exp2"
        android:layout_marginTop="22dp"
        android:clickable="true"
        android:layout_height="280sp"
        android:layout_below="@+id/title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    </RelativeLayout>
</RelativeLayout>
