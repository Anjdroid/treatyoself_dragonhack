<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spending"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="self.yo.treat.treatyoself.Spending"
    android:background="@android:color/white">

    <TextView
        android:text="MY SPENDING"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:id="@+id/title1"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:gravity="center"
        android:fontFamily="casual"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/exp1"
        android:background="@color/colorAccent"
        android:layout_below="@+id/title1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_height="100sp"
        android:clickable="true"
        >

        <TextView
            android:text="COFFEE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:id="@+id/textView3"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="casual"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="1.5 â‚¬"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="casual"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <Button
        android:id="@+id/scan"

        android:text=""
        android:textSize="30sp"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape2"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:background="@drawable/buttonshape3"
        android:layout_height="40dp"
        app:srcCompat="@drawable/unnamed"
        android:id="@+id/set"
        android:adjustViewBounds="true"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:layout_alignBottom="@+id/scan"
        android:layout_alignRight="@+id/title1"
        android:layout_alignEnd="@+id/title1"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <Button
        android:id="@+id/add"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:background="@drawable/buttonshape"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/scan"
        android:layout_toLeftOf="@+id/scan"
        android:layout_toStartOf="@+id/scan"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp" />
</RelativeLayout>
